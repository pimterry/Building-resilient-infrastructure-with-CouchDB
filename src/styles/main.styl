@import url("http://fonts.googleapis.com/css?family=Crete+Round");

.bespoke-slide {
  background-color: #fff;
  padding: 20px;

  aside {
      display: none;
  }
}

.todo:before {
  content: "TODO: "
  color: #f00;
  font-style: italic;
  font-weight: bolder;
}

.title {
  text-align: left;
  font-weight: normal;
  font-family: 'Crete Round';

  .couchdb {
    font-weight: bolder;
    color: #f00;
  }
}

h2.full-slide {
  font-size: 70pt;
  text-align: left;
}

ul {
  margin: 10px 0;
  text-align: left;
}

ol {
  margin: 10px;
  text-align: left;
}

address {
  margin-top: 30px;
  float: left;
  text-align: right;
  width: 100%;
  font-style: normal;
  line-height: 150%

  .bio {
    font-style: italic;
  }

  .author, a {
    font-weight: bolder;
  }

  a {
    color: inherit;
    &:hover {
      font-style: underline;
    }
  }

  .urls {
    padding-top: 26px;
  }

  ul {
    width: 100%;
    position: relative;

    list-style: none;

    li {
      float: left;
      text-align: center;
      width: 33.3%;

      &:first-child {
        text-align: left;
      }
      &:last-child {
        text-align: right;
      }
    }
  }
}

.logo-big {
  width: 60%;
}

pre {
  font-size: 90%;
}

.sideBySide {
  flex-direction: row;

  pre {
    margin: 0.5em 0.4em;
    &:first-child { margin-left: 0; }
    &:last-child { margin-right: 0; }

    font-size: 53%;
    float: left;
    display: inline-block;
    padding: 15px !important;
  }
}

.copyrightNotice {
  width: 100%;
  font-size: 70%;
  color: #888;
}

.diagram {
    display: block;
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
}

.in-place-transition {
  width: 100%;
  margin: 0;
  text-align: inherit;

  .bespoke-bullet-inactive {
    opacity: 0;
    display: none;
    li & {
      transform: translateX(0);
    }
  }

  .bespoke-bullet-active {
    opacity: 0;
    display: none;
  }

  .bespoke-bullet-current,
  // Keep the first bullet/last bullet visible, to make transitions smooth
  .bespoke-bullet-active:last-of-type,
  .bespoke-bullet-inactive:first-of-type {
    opacity: 1;
    display: inherit;
  }
}
